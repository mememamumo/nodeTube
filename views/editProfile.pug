extends layouts/main

block content
    .form-container
        .form__title.tita.st 프로필 수정
        form(action=`/users${routes.editProfile}`, method="post", enctype="multipart/form-data")
            .fileUpload
                label(for="avatar") 프로필 사진 선택
                input.input__file-img(type="file", id="avatar", name="avatar", accept="image/*")

                .preview#viewImage
                    img(src=user.avatarUrl)
            input(type="text", placeholder="별명", name="name", value=loggedUser.name)
            //- input(type="email", placeholder="이메일", name="email", value=loggedUser.email)
            input(type="submit", value="Update Profile")