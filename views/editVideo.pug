extends layouts/main

block content
    .form-container
        form(action=`/videos${routes.editVideo(video.id)}`, method="post")
            input(type="text", placeholder="Title", name="title", value=video.title)
            textarea(name="description", placeholder="Description")=video.description
            input(type="submit", value="Update Video")
        a.form-container__link.form-container__link--delete(href=`/videos${routes.deleteVideos(video.id)}`) Delete Video