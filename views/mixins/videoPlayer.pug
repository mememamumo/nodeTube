mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        //- autoplay
        //- video(src=`/${video.src}`)
        video(src=`/${video.src}`, autoplay)
        .videoPlayer__controls
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-pause
            .videoPlayer__column
                span#jsVolumeBtn
                    i.fas.fa-volume-up
                span
                    span#currentTime 00:00:00
                    span /
                    span#totalTime 00:00:00
                input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", value="0.5", step="0.1")
            .videoPlayer__column
                span#jsFullScreen
                    i.fas.fa-expand