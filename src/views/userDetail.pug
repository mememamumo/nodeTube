extends layouts/main
include mixins/videoBlock

block content
    .user-profile
        .user-profile__header
            a.round.pro
                img.avatar(src=user.avatarUrl)
            h4.profile__username.tita=user.name
            if loggedUser !== null
                if user.id === loggedUser.id
                    .user-profile__btns
                        a.edit-btn(href=`/users${routes.editProfile}`)
                            button.edit-btn Edit Profile
                        a.edit-btn(href=`/users${routes.changePassword}`)
                            button.edit-btn Change Password
                        a.logout-btn(href=routes.logout) 로그아웃
        .home-videos
            each item in user.videos
                +videoBlock({
                    id:item.id,
                    title:item.title,
                    views:item.views,
                    videoFile:item.fileUrl
                })